{
  "productName": "Guildspeak",
  "appId": "org.guildspeak.guildspeakapp",
  "asar": true,
  "directories": {
    "output": "dist"
  },
  "files": ["build/**/*", "package.json"],
  "linux": {
    "category": "Network",
    "target": [
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ]
  },
  "win": {
    "target": ["zip", "nsis"]
  },
  "mac": {
    "category": "public.app-category.navigation"
  }
}
